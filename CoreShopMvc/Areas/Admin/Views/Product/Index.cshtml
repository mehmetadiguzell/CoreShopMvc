@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<table class="table table-sm table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kategori</th>
            <th>Ad</th>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>Puan</th>
            <th>Durum</th>
            <th>Resim</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>            
                <td>@product.Category.Name</td>            
                <td>@product.Name</td>            
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.Point</td>
                <td>@(product.Status==true?"Kayıtlı":"Silindi")</td>
                <td>@product.Image</td>              
                <td>
                    <a asp-action="Update" asp-controller="Product" asp-area="Admin" asp-route-id="@product.ProductId" class="btn btn-warning btn-sm">Güncelle</a>
                </td>
                <td><a asp-action="Delete" asp-controller="Product" asp-area="Admin" asp-route-id="@product.ProductId" class="btn btn-danger btn-sm">Sil</a></td>
                
            </tr>
        }
    </tbody>
</table>
<a asp-action="Add" asp-controller="Product" asp-area="Admin" class="btn btn-primary mb-1">Ekle</a>