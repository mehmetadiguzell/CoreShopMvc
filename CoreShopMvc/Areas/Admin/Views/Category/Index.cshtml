@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<table class="table table-sm table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Durum</th>
 
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Status</td>               
                <td>
                    <a asp-action="Update" asp-controller="Category" asp-area="Admin" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Güncelle</a>
                </td>
                <td><a asp-action="Delete" asp-controller="Category" asp-area="Admin" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Sil</a></td>

            </tr>
        }
    </tbody>
</table>
<a asp-action="Add" asp-controller="Category" asp-area="Admin" class="btn btn-primary mb-1">Ekle</a>

