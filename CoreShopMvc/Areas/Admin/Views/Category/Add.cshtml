@model Category
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="Add" asp-controller="Category" asp-area="Admin" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <div class="form-group">
        <label>Ürün Adı</label>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Aktiflik</label>
        <input type="checkbox" asp-for="@Model.Status" class="form-check-label" />
    </div>
    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-success" />
    </div>

</form>

