@model List<Product>

<div class="col-lg-9">

    <div class="row">
        @if (Model.Count > 0)
        {

            @foreach (var product in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <a href="#"><img class="card-img-top" src="@product.Image" style="width:200px;height:250px" alt=""></a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a asp-action="ProductDetails" asp-controller="Home" asp-route-id="@product.ProductId">@product.Name</a>
                            </h4>
                            <h5>$@product.Price</h5>
                            <p class="card-text">@product.Description</p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">Puan:@product.Point</small>
                        </div>
                    </div>
                </div>

            }

        }
        else
        {
        <div class="alert alert-danger text-center">
            Ürün bulunamadı
        </div>
        }



    </div>
    <!-- /.row -->

</div>

